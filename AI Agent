<body>

    <header>
        <div class="logo-box" onclick="location.href='dashboard.html'">
            <img src="image/logo.png" class="logo-img">
        </div>
        <div class="header-actions">
            <div id="saveStatus" class="save-status"></div>
            <button class="action-btn" onclick="togglePanel('codePanel')"><i class="fas fa-code"></i> Code</button>
            <button class="action-btn" onclick="togglePanel('reviewPanel')"><i class="fas fa-play"></i> Review</button>
            <button class="action-btn primary" onclick="exportToZip()"><i class="fas fa-file-archive"></i> Xuất ZIP</button>
        </div>
    </header>

    <main>
        <div id="chatContainer">
            <div class="msg-row">
                <div class="avatar"><img src="loading/loading.png" style="width:100%"></div>
                <div class="content">Chào mừng bạn đến với <b>HuGo Web Studio</b>. Mọi thay đổi của bạn sẽ được tự động lưu lại.</div>
            </div>
        </div>

        <div class="input-section">
            <div class="input-wrapper">
                <textarea class="studio-textarea" id="mainInput" placeholder="Mô tả website bạn muốn tạo..." oninput="autoHeight(this)"></textarea>
                <div class="input-tools">
                    <div style="display: flex; gap: 10px;">
                        <button class="tool-btn"><i class="fas fa-plus-circle"></i></button>
                        <button class="tool-btn"><i class="fas fa-microphone"></i></button>
                    </div>
                    <button class="action-btn primary" onclick="handleSend()" style="width: 40px; height: 40px; padding:0; justify-content:center;">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </main>

    <div id="codePanel" class="overlay-panel">
        <div class="panel-header">
            <span>SOURCE CODE</span>
            <button class="tool-btn" onclick="togglePanel('codePanel')"><i class="fas fa-times"></i></button>
        </div>
        <textarea id="codeEditor" spellcheck="false">Nhập yêu cầu để tạo code...</textarea>
    </div>

    <div id="reviewPanel" class="overlay-panel">
        <div class="panel-header">
            <span>LIVE REVIEW</span>
            <button class="tool-btn" onclick="togglePanel('reviewPanel')"><i class="fas fa-times"></i></button>
        </div>
        <iframe id="reviewFrame"></iframe>
    </div>

    <script>
        const chatContainer = document.getElementById('chatContainer');
        const codeEditor = document.getElementById('codeEditor');
        const reviewFrame = document.getElementById('reviewFrame');
        const saveStatus = document.getElementById('saveStatus');

        // 1. TỰ ĐỘNG KHÔI PHỤC KHI VÀO TRANG
        window.onload = () => {
            const savedCode = localStorage.getItem('hugo_project_draft');
            if (savedCode) {
                codeEditor.value = savedCode;
                saveStatus.innerHTML = '<i class="fas fa-check-circle"></i> Đã khôi phục bản thảo';
                refreshReview();
            }
        };

        // 2. HÀM TỰ ĐỘNG LƯU (AUTO-SAVE)
        function autoSave() {
            saveStatus.innerHTML = '<i class="fas fa-sync fa-spin"></i> Đang lưu...';
            localStorage.setItem('hugo_project_draft', codeEditor.value);
            setTimeout(() => {
                saveStatus.innerHTML = '<i class="fas fa-cloud-upload-alt"></i> Đã lưu bản thảo';
            }, 800);
        }

        // Lắng nghe thay đổi để lưu
        codeEditor.addEventListener('input', () => {
            clearTimeout(window.saveTimer);
            window.saveTimer = setTimeout(autoSave, 1500);
        });

        // 3. XUẤT FILE ZIP
        function exportToZip() {
            const zip = new JSZip();
            zip.file("index.html", codeEditor.value);
            zip.generateAsync({type:"blob"}).then(function(content) {
                saveAs(content, "hugo_web_project.zip");
                alert("Dự án đã được đóng gói và tải về!");
            });
        }

        // --- CÁC HÀM XỬ LÝ CHAT ---
        function autoHeight(el) { el.style.height = 'auto'; el.style.height = el.scrollHeight + 'px'; }

        function togglePanel(id) {
            const panel = document.getElementById(id);
            panel.classList.toggle('active');
            if(id === 'reviewPanel' && panel.classList.contains('active')) refreshReview();
        }

        function refreshReview() { reviewFrame.srcdoc = codeEditor.value; }

        function handleSend() {
            const input = document.getElementById('mainInput');
            const val = input.value.trim();
            if(!val) return;

            const userRow = document.createElement('div');
            userRow.className = 'msg-row user';
            userRow.innerHTML = `<div class="avatar"><i class="fas fa-user"></i></div><div class="content">${val}</div>`;
            chatContainer.appendChild(userRow);
            
            const aiRow = document.createElement('div');
            aiRow.className = 'msg-row';
            aiRow.innerHTML = `
                <div class="avatar"><img src="loading/loading.png" style="width:100%"></div>
                <div class="content">
                    <div class="ai-status">HuGo đang thiết kế...</div>
                    Mã nguồn đang được cập nhật tự động. Bạn có thể xem trước hoặc tải ZIP bất cứ lúc nào.
                </div>
            `;
            chatContainer.appendChild(aiRow);
            input.value = ''; input.style.height = 'auto';
            chatContainer.scrollTop = chatContainer.scrollHeight;

            // Giả lập tạo Code
            setTimeout(() => {
                const mockCode = `<!DOCTYPE html>\n<html>\n<head>\n<meta charset="UTF-8">\n<style>\n body { background: #000; color: #a8c7fa; display: flex; justify-content: center; align-items: center; height: 100vh; font-family: sans-serif; }\n .card { border: 1px solid #444746; padding: 40px; border-radius: 20px; text-align: center; }\n</style>\n</head>\n<body>\n <div class="card"><h1>${val}</h1><p>Hoàn thành bởi HuGo AI</p></div>\n</body>\n</html>`;
                codeEditor.value = mockCode;
                autoSave();
                aiRow.querySelector('.ai-status').innerText = 'Dự án đã sẵn sàng!';
            }, 2000);
        }
    </script>
</body>
</html>
